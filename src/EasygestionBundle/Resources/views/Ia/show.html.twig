{% extends '::base.html.twig' %}

{% block body %}
    <div>
        <div class="navigation">
            <a href="{{ path('home_ia') }}" style="margin-left:20px;" 
                class="glyphicon glyphicon-arrow-left">
            </a>
        </div>
    </div>
    
    <h2> Besoin de {{ besoin.createdBy.initials }} </h2>
    
    <div class="clear"></div> <br>
    
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ besoin.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>
                    {% if besoin.status %}
                        <span class="label label-success" >Actif</span>
                    {% elseif not besoin.status %}  
                        <span class="label label-danger" >Out</span>
                    {% elseif besoin.status == 2 %}
                        <span class="label label-success" >Ok</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ besoin.dateCreation|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Priorité</th>
                <td>{{ besoin.priority }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ besoin.client.name }}</td>
            </tr>
            <tr>
                <th>Métier</th>
                <td>{{ besoin.workType }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td class="space-pre-wrapped">{{ besoin.description }}</td>
            </tr>
            <tr>
                <th>T0</th>
                <td>{{ besoin.start|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ besoin.duration }} mois</td>
            </tr>
            <tr>
                <th>Profil</th>
                <td>{{ besoin.createdby.initials }}</td>
            </tr>
            <tr>
                <th>Solution</th>
                <td class="space-pre-wrapped">{{ besoin.solution }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
