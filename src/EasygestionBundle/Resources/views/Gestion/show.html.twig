{% extends 'base.html.twig' %}

{% block main %}
    <div>
        <a href="{{ path('homepage') }}">Retour</a>
    </div>
    
    <h2> Besoin de {{ besoin.createdBy.initials }} </h2>
    <br />
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ besoin.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>
                    {% if besoin.status %}
                        Actif
                    {% else %}
                        Out
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ besoin.dateCreation|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Priorité</th>
                <td>{{ besoin.priority }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ besoin.client.name }}</td>
            </tr>
            <tr>
                <th>Métier</th>
                <td>{{ besoin.workType }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ besoin.description }}</td>
            </tr>
            <tr>
                <th>T0</th>
                <td>{{ besoin.start|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ besoin.duration }} mois</td>
            </tr>
            <tr>
                <th>Profil</th>
                <td></td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>{{ besoin.solution }}</td>
            </tr>
        </tbody>
    </table>
    
    <hr>
    
    <a href="{{ path('besoin_edit', { 'id': besoin.id }) }}" class="btn btn-primary">Edit</a>
{% endblock %}
